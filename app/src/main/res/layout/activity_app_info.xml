<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary"
    android:id="@+id/layAppInfo"
    android:padding="@dimen/ts24"
    tools:context=".activities.AppInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:contentDescription="@string/imageview"
            app:srcCompat="@drawable/back1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:contentDescription="@string/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_hh"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/ts16">

        <TextView
            android:fontFamily="@font/ubuntu_medium"
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/ts8"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:fontFamily="@font/ubuntu_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/ts8"
            android:text="@string/allrights"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </LinearLayout>

</LinearLayout>