<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary"
    android:padding="@dimen/ts24"
    android:id="@+id/layVerify"
    tools:context=".activities.VerifyOTP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/ts32"
            android:layout_height="@dimen/ts32"
            android:contentDescription="@string/imageview"
            app:srcCompat="@drawable/back1"/>

    </LinearLayout>

    <TextView
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="@dimen/ts48"
        android:id="@+id/tvVerify1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp24"
        android:textColor="@color/white"
        android:text="@string/verify1"/>

    <TextView
        android:fontFamily="@font/ubuntu"
        android:layout_marginTop="@dimen/ts16"
        android:id="@+id/tvVerify2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp16"
        android:textColor="@color/white"
        android:text="@string/verify2"/>

    <LinearLayout
        android:layout_marginTop="@dimen/ts16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_marginLeft="@dimen/ts4"
            android:layout_marginRight="@dimen/ts4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape4"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:gravity="center"
            android:digits="0123456789"
            android:maxLength="1"
            android:hint="@string/verify5"
            android:id="@+id/etOTP1"
            android:autofillHints="@string/verify5" />

        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_marginLeft="@dimen/ts4"
            android:layout_marginRight="@dimen/ts4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape4"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:gravity="center"
            android:digits="0123456789"
            android:maxLength="1"
            android:hint="@string/verify5"
            android:id="@+id/etOTP2"
            android:autofillHints="@string/verify5" />

        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_marginLeft="@dimen/ts4"
            android:layout_marginRight="@dimen/ts4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape4"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:gravity="center"
            android:digits="0123456789"
            android:maxLength="1"
            android:hint="@string/verify5"
            android:id="@+id/etOTP3"
            android:autofillHints="@string/verify5" />

        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_marginLeft="@dimen/ts4"
            android:layout_marginRight="@dimen/ts4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape4"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:gravity="center"
            android:digits="0123456789"
            android:maxLength="1"
            android:hint="@string/verify5"
            android:id="@+id/etOTP4"
            android:autofillHints="@string/verify5" />

    </LinearLayout>

    <Button
        android:fontFamily="@font/ubuntu_medium"
        android:id="@+id/btnVerify"
        android:textAllCaps="false"
        android:background="@drawable/button_shape5"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/ts16"
        android:gravity="center"
        android:textSize="@dimen/sp16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify3"/>

    <TextView
        android:fontFamily="@font/ubuntu_medium"
        android:layout_marginTop="@dimen/ts16"
        android:id="@+id/tvResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/sp16"
        android:textColor="@color/white"
        android:text="@string/verify4"/>


</LinearLayout>