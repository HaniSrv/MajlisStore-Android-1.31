<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/laySettings"
    android:background="@color/white"
    tools:context=".activities.Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:contentDescription="@string/imageview"
            android:layout_width="@dimen/ts24"
            android:layout_height="@dimen/ts24"
            android:layout_marginStart="@dimen/sp8"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/back"/>

        <TextView
            android:textSize="@dimen/sp16"
            android:id="@+id/tvSettings"
            android:layout_width="0dp"
            android:text="@string/menu_settings"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ts24"
            android:fontFamily="@font/ubuntu"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts05"
        android:background="@color/grey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/ts8">

            <LinearLayout
                android:id="@+id/layAbout"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvAbout"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/aboutus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layApp"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvApp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/appinfo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layCancel"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvCancel"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/crpolicy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layFaq"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvFaq"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/faq"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layPrivacy"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvPrivacy"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/privacypolicy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layReach"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvReach"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/reachus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layReview"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvReview"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/review"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layUpdate"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvUpdate"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/update"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTerms"
                android:background="@drawable/ripple_effect1"
                android:padding="@dimen/ts8"
                android:layout_marginTop="@dimen/ts8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:id="@+id/tvTerms"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/ts8"
                    android:paddingEnd="@dimen/ts8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/termscondition"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16"/>

                <ImageView
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:contentDescription="@string/imageview"
                    android:src="@drawable/rightarrow"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>