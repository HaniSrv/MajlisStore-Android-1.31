<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/single_ordered_item_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/ts4"
        android:padding="@dimen/ts4">

        <ImageView
            android:contentDescription="@string/imageview"
            android:layout_width="@dimen/img4"
            android:layout_height="@dimen/img4"
            android:id="@+id/item_image" />

        <LinearLayout
            android:layout_marginStart="@dimen/sp8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:gravity="center_vertical"
                android:fontFamily="@font/ubuntu"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_marginTop="@dimen/ts4"
                android:gravity="center_vertical"
                android:fontFamily="@font/ubuntu"
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14" />

            <LinearLayout
                android:layout_marginTop="@dimen/ts4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ubuntu"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:layout_marginStart="@dimen/ts8"
                    android:gravity="center_vertical"
                    android:id="@+id/item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts1"
        android:background="@color/lightgrey"/>

</LinearLayout>