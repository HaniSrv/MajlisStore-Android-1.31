<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/layContact"
    android:background="@color/white"
    tools:context=".activities.ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:contentDescription="@string/imageview"
            android:layout_width="@dimen/ts24"
            android:layout_height="@dimen/ts24"
            android:layout_marginStart="@dimen/sp8"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/back"/>

        <TextView
            android:textSize="@dimen/sp16"
            android:id="@+id/pditemnameid"
            android:layout_width="0dp"
            android:text="@string/contact_us"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ts24"
            android:fontFamily="@font/ubuntu"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/ts12"
            >

            <ImageView
                android:contentDescription="@string/imageview"
                android:id="@+id/searchid"
                android:layout_width="@dimen/ts24"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/ts14"
                android:src="@drawable/search"
                />

            <ImageView
                android:id="@+id/cartid"
                android:contentDescription="@string/imageview"
                android:layout_width="@dimen/ts24"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_carts"
                />
            <LinearLayout
                android:layout_marginStart="@dimen/cartcount"
                android:layout_marginTop="@dimen/ts2"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvCartcount"
                    android:visibility="invisible"
                    android:background="@drawable/red_round_shape"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/sp8"
                    android:layout_width="@dimen/ts16"
                    android:layout_height="@dimen/ts16"
                    android:fontFamily="@font/ubuntu"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts05"
        android:background="@color/grey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:hint="@string/signup2"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:id="@+id/etName"
            android:autofillHints="@string/signup2" />

        <View
            android:layout_marginLeft="@dimen/ts16"
            android:layout_marginRight="@dimen/ts16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts05"
            android:background="@color/grey"/>


        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:hint="@string/signup4"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:id="@+id/etEmail"
            android:autofillHints="@string/signup4" />

        <View
            android:layout_marginLeft="@dimen/ts16"
            android:layout_marginRight="@dimen/ts16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts05"
            android:background="@color/grey"/>


        <EditText
            android:fontFamily="@font/ubuntu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:hint="@string/message"
            android:padding="@dimen/ts16"
            android:textSize="@dimen/sp16"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:id="@+id/etComment"
            android:autofillHints="@string/message" />

        <View
            android:layout_marginLeft="@dimen/ts16"
            android:layout_marginRight="@dimen/ts16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts05"
            android:background="@color/grey"/>

        <Button
            android:id="@+id/btnSend"
            android:textAllCaps="false"
            android:background="@drawable/button_shape1"
            android:layout_margin="@dimen/ts16"
            android:gravity="center"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sendmessage"/>


    </LinearLayout>


</LinearLayout>