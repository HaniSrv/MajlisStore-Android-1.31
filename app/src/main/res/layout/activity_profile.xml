<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/layProfile"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:contentDescription="@string/imageview"
            android:layout_width="@dimen/ts24"
            android:layout_height="@dimen/ts24"
            android:layout_marginStart="@dimen/sp8"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/back"/>

        <TextView
            android:textSize="@dimen/sp16"
            android:layout_width="0dp"
            android:text="@string/my_profile"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/ts24"
            android:fontFamily="@font/ubuntu"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts05"
        android:background="@color/grey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/img8"
        android:background="@color/colorPrimaryDark"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_marginTop="@dimen/ts16"
            android:layout_width="@dimen/img"
            android:layout_height="@dimen/img"
            android:contentDescription="@string/imageview"
            android:src="@drawable/user"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/ts16">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/grey"
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/ts4"
                    android:text="@string/name"/>


                <EditText
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/black"
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textSize="@dimen/sp16"
                    android:cursorVisible="false"
                    android:padding="@dimen/ts4"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/ts8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/grey"
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/ts4"
                    android:hint="@string/email_id"/>


                <EditText
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/ubuntu"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp16"
                    android:padding="@dimen/ts4"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/ts8"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/grey"
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp12"
                    android:padding="@dimen/ts4"
                    android:hint="@string/phone_number"/>


                <TextView
                    android:fontFamily="@font/ubuntu"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:id="@+id/txt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp16"
                    android:padding="@dimen/ts4"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    />

            </LinearLayout>


            <TextView
                android:gravity="center"
                android:layout_marginTop="@dimen/ts16"
                android:fontFamily="@font/ubuntu"
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update1"
                android:textSize="@dimen/sp24"
                android:textColor="@color/green"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>